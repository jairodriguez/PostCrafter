{
  "name": "postcrafter-vercel-api",
  "version": "1.0.0",
  "description": "PostCrafter Vercel serverless API for GPT-to-WordPress communication",
  "main": "index.js",
  "scripts": {
    "dev": "vercel dev",
    "build": "tsc",
    "start": "vercel dev",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern='src/tests/api-endpoints.test.ts|src/services/__tests__'",
    "test:integration": "jest --testPathPattern='src/tests/e2e-integration.test.ts'",
    "test:performance": "jest --testPathPattern='src/tests/performance.test.ts'",
    "test:e2e": "node scripts/run-e2e-tests.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance",
    "load:test": "node scripts/run-load-tests.js load",
    "load:spike": "node scripts/run-load-tests.js spike",
    "load:endurance": "node scripts/run-load-tests.js endurance",
    "load:breaking": "node scripts/run-load-tests.js breaking_point",
    "load:memory": "node scripts/run-load-tests.js memory_stress",
    "load:monitor": "node scripts/run-load-tests.js monitor",
    "load:all": "node scripts/run-load-tests.js load spike endurance monitor",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "clean": "rm -rf .vercel/output && rm -rf node_modules/.cache && rm -rf dist",
    "clean:all": "npm run clean && rm -rf node_modules && rm -rf .vercel",
    "clean:test": "rm -rf test-results && rm -rf coverage",
    "install:clean": "npm run clean:all && npm install",
    "prebuild": "npm run lint && npm run type-check",
    "predeploy": "npm run build",
    "postinstall": "npm run type-check",
    "validate": "npm run lint && npm run type-check && npm run test:all",
    "setup": "npm install && npm run build",
    "local:dev": "vercel dev --local-config .vercel/dev.json",
    "local:build": "vercel build --local-config .vercel/dev.json",
    "logs": "vercel logs",
    "logs:prod": "vercel logs --prod",
    "env:pull": "vercel env pull .env.local",
    "env:push": "vercel env push",
    "env:ls": "vercel env ls",
    "validate:openapi": "node scripts/validate-openapi.js",
    "validate:schema": "node scripts/validate-post-schema.js",
    "validate:image-schema": "node scripts/validate-image-schema.js",
    "validate:response-schema": "node scripts/validate-response-schema.js",
    "validate:gpt-action": "node scripts/validate-gpt-action.js"
  },
  "keywords": [
    "vercel",
    "serverless",
    "typescript",
    "wordpress",
    "gpt",
    "api",
    "postcrafter"
  ],
  "author": "PostCrafter Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "axios": "^1.6.0",
    "chart.js": "^4.4.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "cors": "^2.8.5",
    "date-fns": "^3.0.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "rate-limiter-flexible": "^3.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/markdown-it": "^14.1.2",
    "@types/multer": "^1.4.11",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "ajv": "^8.17.1",
    "ajv-draft-04": "^1.0.0",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "swagger-parser": "^10.0.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vercel": "^32.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
